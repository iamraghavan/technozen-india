<%- include('partials/header') %>

<style>
  .error-page-wrapper {
    font-family: 'Arial', sans-serif;
    text-align: center;
    background-color: #f4f4f4;
    color: #333;
    padding: 50px;
  }

  #error-box {
    max-width: 600px;
    margin: auto;
    padding: 40px;
    background: #fff;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    animation: fadeIn 1s ease-in-out;
  }

  .error-title {
    font-size: 48px;
    font-weight: bold;
    color: #e74c3c;
  }

  .error-message {
    font-size: 18px;
    margin: 20px 0;
  }

  .home-btn {
    display: inline-block;
    padding: 10px 20px;
    background: #3498db;
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    border-radius: 5px;
    transition: background 0.3s;
  }

  .home-btn:hover {
    background: #2980b9;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="error-page-wrapper">
  <div id="error-box">
    <h1 class="error-title">404</h1>
    <p class="error-message">Oops! The page you're looking for doesn't exist.</p>
    <p class="error-message">Try heading back to the homepage or checking the URL again.</p>
    <a href="/" class="home-btn">Go Home</a>
  </div>
</div>

<%- include('partials/footer') %>
